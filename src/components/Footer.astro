---
import { siteAuthor, siteStartYear } from "../constant";
const today = new Date();
---

<footer class="border-t text-center text-slate-500 dark:text-slate-200">
    <p class="py-2">
        &copy; {siteStartYear}-{today.getFullYear()}
        {siteAuthor}.
    </p>
    <div class="flex flex-wrap justify-center gap-x-4 gap-y-1 py-2">
        <a
            href="/open-source-license"
            class="text-sm text-slate-500 no-underline hover:text-slate-800 hover:dark:text-slate-300"
            >Open source license</a
        >
    </div>
</footer>
